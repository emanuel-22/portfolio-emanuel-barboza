    src="https://media.licdn.com/dms/image/v2/D4D03AQHAQhRn-Ru_kw/profile-displayphoto-shrink_400_400/B4DZaGnCKbHQAg-/0/1746015102108?e=2147483647&v=beta&t=JD5La1ReCgFSIfqRnXJUPsu1gl2rIW9tFYClFiM-b9Y" 
    alt="My profile photo" 
  />

  <!-- Texto a la derecha -->
  <div>
    <h1 class="animate-fade-right animate-once animate-duration-[3000ms] text-3xl md:text-4xl lg:text-5xl font-bold flex flex-wrap gap-4 pb-6">
      Hola ðŸ‘‹, soy Emanuel Barboza
      <a 
        href="https://www.linkedin.com/in/emabarboza/"
        target="_blank"
        rel="noopener"
        class="flex justify-center items-center">
        <Badge>Disponible para trabajar</Badge>
      </a>
    </h1>
    <h2 class="animate-fade-right animate-once animate-duration-[3000ms] text-xl lg:text-3xl opacity-80 pb-4 max-w-[700px]">   
      <span class="text-yellow-200/90">
        <TypewriterText />
      </span> 
    </h2>
    <h2 class="animate-fade-right animate-once animate-duration-[3000ms] text-xl lg:text-2xl opacity-80 pb-4 max-w-[700px]">
