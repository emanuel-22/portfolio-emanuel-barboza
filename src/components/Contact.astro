<div class="animate-fade animate-once animate-duration-[9000ms] isolate px-6 pt-3 pb-9 sm:pt-2 sm:pb-2 lg:px-8 mb-2">

  <form id="contact-form" method="POST" data-netlify="true" name="contact" netlify-honeypot="bot-field" class="mx-auto mt-6 max-w-xl sm:mt-8">
